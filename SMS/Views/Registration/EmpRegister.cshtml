@model SMS.Models.Employer

@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AddEmp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css">
</head>
<body>
    <div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>}

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>}
        <h2>Register</h2>

        @using (Html.BeginForm("EmpRegister", "Registration", FormMethod.Post))
        {
            <div>
                <label>Your assigned Employee ID: @ViewBag.MaxEmpId</label>
            </div>

            

            <table class="table">
                <tr>
                    <td>
                        @Html.LabelFor(m => m.EmpName)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.EmpName, new { @class = "form-control", type = "text", @pattern = "[A-Za-z  ]*" })
                        @Html.ValidationMessageFor(m => m.EmpName)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.ContactNo)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(m => m.ContactNo)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Email)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.DOB)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.DOB, new { @class = "form-control datepicker", @id = "txtDate", @value = "" })
                        @Html.ValidationMessageFor(model => model.DOB)

                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.DeptId)
                    </td>
                    <td>
                        @Html.DropDownList("DeptId", (SelectList)ViewBag.DepartmentList, "Select Department", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DeptId)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.DOJ)

                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.DOJ, new { @class = "form-control datepicker", @id = "txtDate", @value = "" })
                        @Html.ValidationMessageFor(model => model.DOJ)

                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.EmpUsername)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.EmpUsername, new { @class = "form-control", type = "text", @pattern = "[A-Za-z  ]*" })
                        @Html.ValidationMessageFor(model => model.EmpUsername)

                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(m => m.EmpPassword)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.EmpPassword, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(model => model.EmpPassword)

                    </td>
                </tr>

            </table>

            <button type="submit" class="btn btn-primary"> Register </button>
        }
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',

            });
        });
    </script>

</body>
</html>