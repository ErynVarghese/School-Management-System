@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload Students</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Upload Student Records</h2>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        @if (TempData["Error"] != null)
        {
    <div class="alert alert-danger">@Html.Raw(TempData["Error"].ToString())</div>
        }

        @using (Html.BeginForm("UploadStudent", "StudCRUD", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="fileUpload">Select Excel File:</label>
                <input type="file" class="form-control-file" id="fileUpload" name="fileUpload" accept=".xls,.xlsx" required />
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        }
    </div>
</body>
</html>
