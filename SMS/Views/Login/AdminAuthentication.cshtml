
@{
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authentication</title>
</head>
<body>
    <div>
        <h2>Login</h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @using (Html.BeginForm("AdminAuthentication", "Login", FormMethod.Post))
        {
            <table class="table">
                <tr>
                    <td>
                        @Html.Label("username", "User Name")
                    </td>
                    <td>
                        @Html.TextBox("username", null, new { @class = "form-control", type = "text", @pattern = "[A-Za-z  ]*" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("password", "Password")
                    </td>
                    <td>
                        @Html.TextBox("password", null, new { @class = "form-control", type = "number" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </td>
                </tr>

            </table>
        }
        <br />
        <br />
        <br />

      

    </div>
</body>
</html>